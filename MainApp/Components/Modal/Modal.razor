<div class="modal fade @_modalStatus"
         tabindex="-1"
         role="dialog"
         style="display: @_modalDisplay;
                backdrop-filter: blur(6px);
                -webkit-backdrop-filter: blur(6px);"
         id="@_modalId">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-@Size.ToString().ToLower()"
            data-backdrop="static"
            role="document">
        <div class="modal-content @("rounded"+_appSettings.Modal) @ModalContentStyle">
            <div class="modal-header">
                <h5 class="modal-title">
                    @Title
                </h5>
                @if(IsCloseButtonVisible)
                {
                    <button class="btn-close"
                            type="button"
                            data-bs-dismiss="modal"
                            aria-label="Close"
                            @onclick="() => Close(_modalId)">
                    </button>
                }
            </div>
            <div class="modal-body @ModalBodyStyle">
                @Body
            </div>
            <div class="modal-footer">
                @Footer
            </div>
        </div>
    </div>
</div>
@if (_showBackdrop)
{
    <div class="modal-backdrop fade @_modalStatus" style="display: @_modalDisplay.ToString().ToLower();"></div>
}
