@using MainApp.Components.Badge

<div class="row justify-content-between align-items-center">
    <div class="col-auto">
        <div>
            <span class="text-uppercase text-@TitleColor.ToString().ToLower() fw-semibold opacity-75">
                @Title
            </span>
            @if (BadgeBackgroundColor.ToString().Length > 0 && BadgeTitle.Length > 0)
            {
                <sup class="ps-1">
                    <Badge BackgroundColor="@BadgeBackgroundColor" Message="@BadgeTitle" />
                </sup>
            }
        </div>
    </div>
    <div class="col-auto">
        <i class="bi @Icon fs-5 text-@IconColor.ToString().ToLower()-emphasis"></i>
    </div>
</div>
