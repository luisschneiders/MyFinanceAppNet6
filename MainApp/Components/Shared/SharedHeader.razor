@using MainApp.Components.Badge

<div class="row justify-content-between align-items-center">
    <div class="col-auto">
        <div class="text-uppercase text-secondary">
            <strong>
                @Title
            </strong>
            @if (BadgeBackgroundColor.ToString().Length > 0 && BadgeTitle.Length > 0)
            {
                <sup class="ps-1">
                    <Badge BackgroundColor="@BadgeBackgroundColor" Message="@BadgeTitle" />
                </sup>
            }
        </div>
    </div>
    <div class="col-auto">
        <i class="bi @Icon display-6 text-@IconColor.ToString().ToLower()"></i>
    </div>
</div>
