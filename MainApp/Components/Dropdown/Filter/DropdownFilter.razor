<div class="btn-group bg-@(ButtonColor.ToString().ToLower())-subtle @("rounded"+_appSettings.Button)" role="group">
    <div class="dropdown @(IsDisplayLargeNone ? "d-lg-none" : "")">
        <button class="btn @("btn-" + ButtonSize.ToString().ToLower()) @("bg-" + ButtonColor.ToString().ToLower() + "-subtle") @("text-" + Theme.Dark.ToString().ToLower() + "-emphasis") text-nowrap @("rounded"+_appSettings.Button)"
                title="Filter by..."
                id="dropdownMenuOptions"
                data-bs-toggle="dropdown"
                aria-expanded="false">
            <div>
                @if (IconStart is not null && IconStart.Length > 0)
                {
                    <i class="bi @IconStart text-@IconStartColor.ToString().ToLower()-emphasis pe-1"></i>
                }
                @if (DropdownLabel is not null && DropdownLabel.Length > 0)
                {
                    <span class="pe-1">@DropdownLabel</span>
                }
                @if (IconEnd.Length > 0)
                {
                    <i class="bi @IconEnd"></i>
                }
            </div>
        </button>
        <ul class="dropdown-menu dropdown-menu-@DropdownPosition.ToString().ToLower()
                    bg-@Theme.Dark.ToString().ToLower()-subtle
                    border-@Theme.Dark.ToString().ToLower()-subtle
                    app-dropdown-filter
                    overflow-y-scroll
                    shadow-sm"
            aria-labelledby="dropdownMenuOptions">
            @ChildContent
        </ul>
    </div>
    @if (Model?.Id > 0)
    {
        <div class="d-flex align-items-center">
            <div class="vr my-1 text-@(ButtonColor.ToString().ToLower())-emphasis"></div>
            <button class="btn btn-@(Size.Sm.ToString().ToLower())"
                    title="Remove"
                    @onclick="ResetFilter">
                <i class="bi bi-x-circle text-@(Theme.Dark.ToString().ToLower())-emphasis"></i>
            </button>
        </div>
    }
</div>
