<div class="btn-group bg-@(ButtonColor.ToString().ToLower())-subtle @("rounded"+_buttonRadius)" role="group">
    <div class="dropdown">
        <button class="btn @("btn-" + ButtonSize.ToString().ToLower()) @("bg-" + ButtonColor.ToString().ToLower() + "-subtle") @("text-" + ButtonColor.ToString().ToLower() + "-emphasis") text-nowrap @("rounded"+_buttonRadius)"
                title="Change date range"
                id="dropdownDateRange"
                data-bs-toggle="dropdown"
                data-bs-auto-close="inside"
                aria-expanded="false">
            <i class="bi bi-calendar3 text-@IconColor.ToString().ToLower()-emphasis"></i>
            @DropdownLabel
            <i class="bi bi-chevron-down ps-1"></i>
        </button>
        <ul class="dropdown-menu dropdown-menu-@DropdownPosition.ToString().ToLower() border-0 bg-@ButtonColor.ToString().ToLower()-subtle shadow-sm ps-2"
            aria-labelledby="dropdownDateRange">
            <li class="d-flex pe-2 gap-2">
                <input class="form-control form-control-sm @("rounded"+_buttonRadius)"
                       id="Start"
                       type="month"
                       placeholder="Month / Year"
                       @bind-value="DateTimeRange.Start" />
                <button type="submit"
                        class="btn btn-primary btn-sm @("rounded"+_buttonRadius)"
                        title="Confirm"
                        @onclick="ChangeDateAsync">
                    <i class="bi bi-check-lg"></i>
                </button>
            </li>
        </ul>
    </div>
</div>
