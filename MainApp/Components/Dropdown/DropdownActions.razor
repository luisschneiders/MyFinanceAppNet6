<div class="dropdown @(IsDisplayLargeNone ? "d-lg-none" : "")">
    <button class="btn @("btn-" + ButtonSize.ToString().ToLower()) @("bg-" + ButtonColor.ToString().ToLower() + "-subtle") @("text-" + ButtonColor.ToString().ToLower() + "-emphasis") text-nowrap"
            title="More actions"
            id="dropdownMenuOptions"
            data-bs-toggle="dropdown"
            aria-expanded="false">
        <div>
            @if (IconStart.Length > 0)
            {
                <i class="bi @IconStart text-@IconStartColor.ToString().ToLower() pe-1"></i>
            }
            @if (Title.Length > 0)
            {
                <span class="pe-1">@Title</span>
            }
            @if (IconEnd.Length > 0)
            {
                <i class="bi @IconEnd"></i>
            }
        </div>
    </button>
    <ul class="dropdown-menu dropdown-menu-end border-0 bg-light-subtle shadow-sm"
        aria-labelledby="dropdownMenuOptions">
        @ChildContent
    </ul>
</div>
