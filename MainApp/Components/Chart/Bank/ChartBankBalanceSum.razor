@using MainApp.Components.Card
@using MainApp.Components.Badge
@using MainApp.Components.Loader
@using MainApp.Components.Shared

<SharedHeader Title="All Accounts"
              Icon="bi-graph-up"
              IconColor="Theme.Info" />

@if (_isLoading)
{
    <Loader />
}
else
{
    <div class="row justify-content-center align-items-center h-100">
        <div class="col">
            <Chart Id="BankBalanceSum"
                   Type="ChartType.line"
                   Data="@(_chartConfigData)"
                   OnSubmitSuccess="data => SetChartObjectReference(data)" />
        </div>
    </div>
}
