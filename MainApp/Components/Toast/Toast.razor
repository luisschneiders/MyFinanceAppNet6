<div class="position-fixed bottom-0 start-0 p-4"
     style="z-index: 1066">
    <div id="@_toastId"
         class="toast @(_isVisible ? "show": "hide") bg-@_backgroundColor text-white border-0 fade"
         role="alert"
         aria-live="assertive"
         aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body">
                @_message
            </div>
            <button type="button"
                    class="btn-close btn-close-white me-2 m-auto"
                    aria-label="Close"
                    @onclick="() => HideToast()"
            ></button>
        </div>
    </div>
</div>
