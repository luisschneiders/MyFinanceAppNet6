@using MainApp.Components.Footer
@using MainApp.Components.Toast

@inherits LayoutComponentBase

<PageTitle>@Label.AppTitle</PageTitle>

<header>
    <CascadingValue Value="@AppSettings" Name="AppSettings">
        <NavView />
    </CascadingValue>
</header>
<div class="main">
    <CascadingValue Value="@AppSettings" Name="AppSettings">
        @Body
    </CascadingValue>
</div>
<footer class="py-3 app-footer d-none d-md-block">
    <AuthorizeView>
        <Authorized>
            <FooterViewAuthorized />
        </Authorized>
        <NotAuthorized>
            <FooterViewNotAuthorized />
        </NotAuthorized>
    </AuthorizeView>
</footer>
<Toast />
