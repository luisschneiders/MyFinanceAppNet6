<AuthorizeView>
    <Authorized>
        <div class="dropdown">
            <a class="btn bg-primary-subtle text-primary-emphasis shadow-sm" id="dropdownMenuUser" data-bs-toggle="dropdown" data-bs-display="static" aria-expanded="false">
                Hello, @context.User.Identity?.Name 😊<i class="bi bi-chevron-down ps-2"></i>
            </a>
            <ul class="dropdown-menu dropdown-menu-lg-end border-0 bg-light-subtle shadow-sm" aria-labelledby="dropdownMenuUser">
                <li class="px-2">
                    <a class="dropdown-item rounded" href="MicrosoftIdentity/Account/EditProfile">
                        <i class="bi bi-person pe-1"></i>Account
                    </a>
                </li>
                <li class="px-2">
                    <NavLink class="dropdown-item rounded" href="@EndPoint.Settings" Match="NavLinkMatch.All">
                        <i class="bi bi-sliders pe-1"></i>Settings
                    </NavLink>
                </li>
                <li><hr class="dropdown-divider"></li>
                <li class="px-2">
                    <a class="dropdown-item rounded" href="MicrosoftIdentity/Account/SignOut">
                        <i class="bi bi-box-arrow-left pe-1"></i>Logout
                    </a>
                </li>
            </ul>
        </div>
    </Authorized>
</AuthorizeView>
