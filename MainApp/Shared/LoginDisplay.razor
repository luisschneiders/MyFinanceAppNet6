<AuthorizeView>
    <Authorized>
        <div class="dropdown">
            <a class="btn btn-@Theme.Light.ToString().ToLower() border-@Theme.Dark.ToString().ToLower()-subtle @("rounded"+_appSettings.Button)" id="dropdownMenuUser" data-bs-toggle="dropdown" data-bs-display="static" aria-expanded="false">
                Hello, @context.User.Identity?.Name &#x1F60A<i class="bi bi-chevron-down ps-2"></i>
            </a>
            <ul class="w-100 dropdown-menu dropdown-menu-lg-end bg-@Theme.Light.ToString().ToLower()-subtle border-@Theme.Dark.ToString().ToLower()-subtle shadow-sm" aria-labelledby="dropdownMenuUser">
                <li class="px-2">
                    <a class="dropdown-item rounded" href="MicrosoftIdentity/Account/EditProfile">
                        <i class="bi bi-person pe-1"></i>Account
                    </a>
                </li>
                <li class="px-2">
                    <NavLink class="dropdown-item rounded" href="@EndPoint.Settings" Match="NavLinkMatch.All">
                        <i class="bi bi-sliders pe-1"></i>Settings
                    </NavLink>
                </li>
                <li><hr class="dropdown-divider"></li>
                <li class="px-2">
                    <a class="dropdown-item rounded" href="MicrosoftIdentity/Account/SignOut">
                        <i class="bi bi-box-arrow-left pe-1"></i>Logout
                    </a>
                </li>
            </ul>
        </div>
    </Authorized>
</AuthorizeView>
