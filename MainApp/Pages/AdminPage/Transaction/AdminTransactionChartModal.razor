@using MainApp.Components.Card
@using MainApp.Components.Modal
@using MainApp.Components.Dropdown.Filter
@using MainApp.Components.Chart.Transaction
@using MainApp.Components.Chart.Bank

<Modal @ref="_modal"
       Size="Size.Fullscreen"
       ModalContentStyle="bg-danger-subtle">
    <Title>
        <span class="text-secondary">
            Charts
        </span>
    </Title>
    <Body>
        <div class="row">
            <div class="col-sm-12 col-lg-6">
                <CardView Styles="w-100 border-0 mb-4">
                    <CardMiddle>
                        <h3 class="fs-5">Daily</h3>
                        <ChartTransactionIOByDay ChartType="ChartType.line" />
                    </CardMiddle>
                </CardView>
            </div>
            <div class="col-sm-12 col-lg-6">
                <CardView Styles="w-100 border-0 mb-4">
                    <CardMiddle>
                        <h3 class="fs-5">Monthly</h3>
                        <ChartTransactionIOByMonth ChartType="ChartType.line" />
                    </CardMiddle>
                </CardView>
            </div>
            <div class="col-sm-12 col-lg-6">
                <CardView Styles="w-100 border-0 mb-4">
                    <CardMiddle>
                        <h3 class="fs-5">Active</h3>
                        <ChartBankAccountActive ChartType="ChartType.line" />
                    </CardMiddle>
                </CardView>
            </div>
        </div>
    </Body>
    <Footer>
        <div class="row">
            <div class="col-auto">
                <button type="button"
                        class="btn btn-outline-secondary @("rounded"+_appSettings.Button)"
                        data-dismiss="modal"
                        @onclick="() => CloseModalAsync()">
                    Close
                </button>
            </div>
        </div>
    </Footer>
</Modal>
