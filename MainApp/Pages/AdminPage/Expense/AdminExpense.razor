@page "/admin/expenses"
@using MainApp.Components.Page
@using MainApp.Components.Card
@using MainApp.Components.Message
@using MainApp.Components.Breadcrumb
@using MainApp.Components.Badge

<div class="container-lg">
    <AuthorizeView Policy="Admin">
        <Authorized>
            <PageWrapper>

                <PageTopView>
                    <PageTopWrapper>
                        <div class="d-flex align-items-baseline">
                            <i class="bi bi-cart4 text-info pe-1 fs-5" /><PageTopTitle Title="Expenses" />
                            <sup class="ps-1">
                                <Badge BackgroundColor="@Theme.Success" Message="New" />
                            </sup>
                        </div>
                        <Breadcrumb AppPageLink="@EndPoint.AdminExpenses" />
                    </PageTopWrapper>
                </PageTopView>

                <PageMiddleView>
                    <PageMiddleWrapper>
                        <div class="row">
                            <div class="col-12 col-lg-9">
                                <AdminExpensePanelLeft />
                            </div>
                            <div class="col-12 col-lg-3 d-none d-lg-block">
                                <AdminExpensePanelRight />
                            </div>
                        </div>
                    </PageMiddleWrapper>
                </PageMiddleView>

                <PageBottomView />

            </PageWrapper>
        </Authorized>
        <NotAuthorized>
            <NotAuthorizedMessage />
        </NotAuthorized>
    </AuthorizeView>
</div>
