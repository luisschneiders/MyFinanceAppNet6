@page "/admin"

@using MainApp.Components.Page
@using MainApp.Components.Card
@using MainApp.Components.Chart.Bank
@using MainApp.Components.Chart.Expense
@using MainApp.Components.Chart.Transaction
@using MainApp.Components.Message
@using MainApp.Components.Shared

<div class="container-fluid px-0">
    <AuthorizeView>
        <Authorized>
            <PageWrapper>

                <PageTopView>
                    <div class="container-lg">
                        <PageTopWrapper>
                            <div class="d-flex align-items-baseline">
                                <PageTopTitle Title="@(Label.AppMenuAdmin)" />
                            </div>
                        </PageTopWrapper>
                    </div>
                </PageTopView>

                <PageMiddleView>
                    <PageMiddleWrapper>
                        @* <div class="app-page-background-@(Theme.Dark.ToString().ToLower()) pb-5"> *@
                        <div class="container-lg">
                            <div class="row gy-5">
                                <div class="col-sm-12 col-md-4 d-flex flex-sm-column flex-md-row justify-content-center">
                                    <CardView Styles="w-100 border-0">
                                        <CardMiddle>
                                            <div class="d-grid gap-3">
                                                <NavLink href="@EndPoint.AdminExpenses">
                                                    <div class="btn btn-light border-0 d-flex w-100 align-items-center @("rounded"+_appSettings.Card)">
                                                        <i class="bi bi-cart4 text-@(Theme.Secondary.ToString().ToLower()) fs-5"></i>
                                                        <div class="w-100 text-start ps-3 pe-2">
                                                            <span class="mb-1">@Label.AppMenuAdminExpense</span>
                                                            <div class="text-@(Theme.Secondary.ToString().ToLower()) pb-2">
                                                                <small class="text-wrap d-none d-xl-flex">
                                                                    @Label.AppPageAdminFinancialInstitutionParagraph1
                                                                    <br />
                                                                    @Label.AppPageAdminFinancialInstitutionParagraph2
                                                                </small>
                                                            </div>
                                                        </div>
                                                        <div class="text-@(Theme.Secondary.ToString().ToLower())">
                                                            <i class="bi bi-chevron-right"></i>
                                                        </div>
                                                    </div>
                                                </NavLink>
                                                <NavLink href="@EndPoint.AdminTransactions">
                                                    <div class="btn btn-light border-0 d-flex w-100 align-items-center @("rounded"+_appSettings.Card)">
                                                        <i class="bi bi-currency-exchange text-@(Theme.Secondary.ToString().ToLower()) fs-5"></i>
                                                        <div class="w-100 text-start ps-3 pe-2">
                                                            <span class="mb-1">@Label.AppMenuAdminTransaction</span>
                                                            <div class="text-@(Theme.Secondary.ToString().ToLower()) pb-2">
                                                                <small class="text-wrap d-none d-xl-flex">
                                                                    @Label.AppPageAdminTransactionParagraph1
                                                                </small>
                                                            </div>
                                                        </div>
                                                        <div class="text-@(Theme.Secondary.ToString().ToLower())">
                                                            <i class="bi bi-chevron-right"></i>
                                                        </div>
                                                    </div>
                                                </NavLink>
                                                <NavLink href="@EndPoint.AdminTimesheet">
                                                    <div class="btn btn-light border-0 d-flex w-100 align-items-center @("rounded"+_appSettings.Card)">
                                                        <i class="bi bi-clock-history text-@(Theme.Secondary.ToString().ToLower()) fs-5"></i>
                                                        <div class="w-100 text-start ps-3 pe-2">
                                                            <span class="mb-1">@Label.AppMenuAdminTimesheet</span>
                                                            <div class="text-@(Theme.Secondary.ToString().ToLower()) pb-2">
                                                                <small class="text-wrap d-none d-xl-flex">
                                                                    @Label.AppPageAdminTimesheetParagraph1 
                                                                    <br />
                                                                    @Label.AppPageAdminTimesheetParagraph2
                                                                </small>
                                                            </div>
                                                        </div>
                                                        <div class="text-@(Theme.Secondary.ToString().ToLower())">
                                                            <i class="bi bi-chevron-right"></i>
                                                        </div>
                                                    </div>
                                                </NavLink>
                                                <NavLink href="@EndPoint.AdminTrips">
                                                    <div class="btn btn-light border-0 d-flex w-100 align-items-center @("rounded"+_appSettings.Card)">
                                                        <i class="bi bi-pin-map text-@(Theme.Secondary.ToString().ToLower()) fs-5"></i>
                                                        <div class="w-100 text-start ps-3 pe-2">
                                                            <span class="mb-1">@Label.AppMenuAdminTrip</span>
                                                            <div class="text-@(Theme.Secondary.ToString().ToLower()) pb-2">
                                                                <small class="text-wrap d-none d-xl-flex">
                                                                    @Label.AppPageAdminTripParagraph1
                                                                </small>
                                                            </div>
                                                        </div>
                                                        <div class="text-@(Theme.Secondary.ToString().ToLower())">
                                                            <i class="bi bi-chevron-right"></i>
                                                        </div>
                                                    </div>
                                                </NavLink>
                                            </div>
                                        </CardMiddle>
                                    </CardView>
                                </div>
                                <div class="col-sm-12 col-md-8 d-flex flex-sm-column flex-md-row justify-content-center">
                                    <CardView Styles="w-100 border-0">
                                        <CardMiddle>
                                            <ChartTransactionIOByMonth ChartType="ChartType.line" />
                                        </CardMiddle>
                                    </CardView>
                                </div>
                            </div>
                        </div>
                        @* </div> *@
                        <div class="container-lg py-5 app-footer-gap">
                            <div class="row gy-5">
                                <div class="col-sm-12 col-md-6 d-flex flex-sm-column flex-md-row justify-content-center">
                                    <CardView Styles="w-100 border-0">
                                        <CardMiddle>
                                            <h3 class="fs-5">@Label.AppMenuAdminExpense</h3>
                                            <ChartExpenseLast3Months />
                                        </CardMiddle>
                                    </CardView>
                                </div>
                                <div class="col-sm-12 col-md-6 d-flex flex-sm-column flex-md-row justify-content-center">
                                    <CardView Styles="w-100 border-0">
                                        <CardMiddle>
                                            <h3 class="fs-5">@Label.AppMenuAdminTransaction</h3>
                                            <ChartTransactionLast3Months />
                                        </CardMiddle>
                                    </CardView>
                                </div>
                            </div>
                        </div>
                    </PageMiddleWrapper>
                </PageMiddleView>
                <PageBottomView />
            </PageWrapper>
        </Authorized>
        <NotAuthorized>
            <NotAuthorizedMessage />
        </NotAuthorized>
    </AuthorizeView>
</div>
