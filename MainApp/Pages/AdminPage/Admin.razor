@page "/admin"

@using MainApp.Components.Page
@using MainApp.Components.Card
@using MainApp.Components.Chart.Bank
@using MainApp.Components.Chart.Transaction
@using MainApp.Components.Message
@using MainApp.Components.Shared

<div class="container-fluid px-0">
    <AuthorizeView>
        <Authorized>
            <PageWrapper>

                <PageTopView>
                    <div class="container-lg">
                        <PageTopWrapper>
                            <div class="d-flex align-items-baseline">
                                <i class="bi bi-columns-gap text-info pe-1 fs-5" /><PageTopTitle Title="Admin" />
                            </div>
                        </PageTopWrapper>
                    </div>
                </PageTopView>

                <PageMiddleView>
                    <PageMiddleWrapper>
                        <div class="app-page-background-danger pb-5">
                            <div class="container-lg">
                                <div class="row g-3">
                                    <div class="col-sm-12 col-md-4 d-flex flex-sm-column flex-md-row justify-content-center">
                                        <CardView Styles="w-100 border-0 shadow">
                                            <CardMiddle>
                                                <div class="d-grid gap-3">
                                                    <NavLink class="btn bg-light-subtle" href="@EndPoint.AdminExpenses">
                                                        <div class="d-flex w-100 align-items-center">
                                                            <i class="bi bi-cart4 text-info pe-3"></i>
                                                            <div class="w-100 text-start">
                                                                <h2 class="mb-1 h5">Expenses</h2>
                                                                <div class="text-secondary pb-2">
                                                                    <small class="text-wrap">Control your expenses with calendar or list views. See graphs to visualize previous months expenses and a static map of purchases based on location.</small>
                                                                </div>
                                                            </div>
                                                            <div class="text-secondary">
                                                                <i class="bi bi-chevron-right"></i>
                                                            </div>
                                                        </div>
                                                    </NavLink>
                                                    <NavLink class="btn bg-light-subtle" href="@EndPoint.AdminTransactions">
                                                        <div class="d-flex w-100 align-items-center">
                                                            <i class="bi bi-currency-exchange text-info pe-3"></i>
                                                            <div class="w-100 text-start">
                                                                <h2 class="mb-1 h5">Transactions</h2>
                                                                <div class="text-secondary pb-2">
                                                                    <small class="text-wrap">Create records between banks based on the type of transactions. See graphs to compare previous months of income and outcome.</small>
                                                                </div>
                                                            </div>
                                                            <div class="text-secondary">
                                                                <i class="bi bi-chevron-right"></i>
                                                            </div>
                                                        </div>
                                                    </NavLink>
                                                    <NavLink class="btn bg-light-subtle" href="@EndPoint.AdminTimesheet">
                                                        <div class="d-flex w-100 align-items-center">
                                                            <i class="bi bi-clock-history text-info pe-3"></i>
                                                            <div class="w-100 text-start">
                                                                <h2 class="mb-1 h5">Timesheet</h2>
                                                                <div class="text-secondary pb-2">
                                                                    <small class="text-wrap">Keep records of your timesheet across the companies you work, with a summary and a rate calculator for reference.</small>
                                                                </div>
                                                            </div>
                                                            <div class="text-secondary">
                                                                <i class="bi bi-chevron-right"></i>
                                                            </div>
                                                        </div>
                                                    </NavLink>
                                                    <NavLink class="btn bg-light-subtle" href="@EndPoint.AdminTrips">
                                                        <div class="d-flex w-100 align-items-center">
                                                            <i class="bi bi-pin-map text-info pe-3"></i>
                                                            <div class="w-100 text-start">
                                                                <h2 class="mb-1 h5">Trips</h2>
                                                                <div class="text-secondary pb-2">
                                                                    <small class="text-wrap">Keep track of your trips based on the cars you drive.</small>
                                                                </div>
                                                            </div>
                                                            <div class="text-secondary">
                                                                <i class="bi bi-chevron-right"></i>
                                                            </div>
                                                        </div>
                                                    </NavLink>
                                                </div>
                                            </CardMiddle>
                                        </CardView>
                                    </div>
                                    <div class="col-sm-12 col-md-8 d-flex flex-sm-column flex-md-row justify-content-center">
                                        <CardView Styles="w-100 border-0 shadow">
                                            <CardMiddle>
                                                <ChartTransactionIO />
                                            </CardMiddle>
                                        </CardView>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="container-lg py-5">
                            <div class="row g-3">
                                <div class="col-sm-12 col-md-8 d-flex flex-sm-column flex-md-row justify-content-center">
                                    <CardView Styles="w-100 border-0 shadow">
                                        <CardMiddle>
                                            <MapLocationExpense Color="MapMarkerColor.White"
                                                                Width="MapSize.Width800"
                                                                Height="MapSize.Height250"
                                                                Scale="MapScale.Desktop"
                                                                PeriodRange="PeriodRange.Year"
                                                                DateRange="_dateTimeRange" />
                                        </CardMiddle>
                                    </CardView>
                                </div>
                                <div class="col-sm-12 col-md-4 d-flex flex-sm-column flex-md-row justify-content-center">
                                    <CardView Styles="w-100 border-0 shadow">
                                        <CardMiddle>
                                            <ChartBankAccountActive />
                                        </CardMiddle>
                                    </CardView>
                                </div>
                            </div>
                        </div>
                    </PageMiddleWrapper>
                </PageMiddleView>
                <PageBottomView />
            </PageWrapper>
        </Authorized>
        <NotAuthorized>
            <NotAuthorizedMessage />
        </NotAuthorized>
    </AuthorizeView>
</div>
