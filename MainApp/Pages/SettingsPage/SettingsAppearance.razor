@using MainApp.Components.Card

<CardView Styles="border-0">
    <CardMiddle Styles="p-0">
        <div class="btn bg-light-subtle w-100 rounded-4"
                @onclick="SetSettingsAppearance">
            <div class="d-flex w-100 align-items-center">
                <i class="bi bi-moon-stars-fill text-info fs-5"></i>
                <div class="w-100 text-start ps-3 pe-2">
                    <h2 class="mb-1 h5">Appearance</h2>
                    <small class="text-secondary">Choose dark or light mode.</small>
                </div>
                <div class="text-secondary">
                    <i class="bi bi-chevron-right"></i>
                </div>
            </div>
        </div>
    </CardMiddle>
</CardView>
