@using MainApp.Components.Card

<CardView Styles="border-0">
    <CardMiddle Styles="p-0">
        <div @onclick="SetSettingsAppearance">
            <div class="btn btn-light border-0 d-flex w-100 align-items-center @("rounded"+Radius)">
                <i class="bi bi-moon-stars-fill text-info-emphasis fs-5"></i>
                <div class="w-100 text-start ps-3 pe-2">
                    <span class="d-block mb-1">Appearance</span>
                    <small class="text-secondary">Choose dark or light mode.</small>
                </div>
                <div class="text-secondary">
                    <i class="bi bi-chevron-right"></i>
                </div>
            </div>
        </div>
    </CardMiddle>
</CardView>
