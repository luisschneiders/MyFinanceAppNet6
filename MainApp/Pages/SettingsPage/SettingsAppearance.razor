@using MainApp.Components.Card

<CardView Styles="border-0">
    <CardMiddle Styles="p-0">
        <div class="btn btn-light w-100"
                @onclick="SetSettingsAppearance">
            <div class="d-flex w-100 align-items-center">
                <i class="bi bi-moon-stars-fill text-info pe-3"></i>
                <div class="w-100 text-start">
                    <h2 class="mb-1 h5 text-dark">Appearance</h2>
                    <small class="text-secondary">Choose dark or light mode.</small>
                </div>
                <div class="text-secondary">
                    <i class="bi bi-chevron-right"></i>
                </div>
            </div>
        </div>
    </CardMiddle>
</CardView>
