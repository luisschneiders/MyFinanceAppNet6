@using MainApp.Components.Badge
@using MainApp.Components.OffCanvas
@using MainApp.Components.Toast

<OffCanvas @ref="_offCanvas" PositionX="Position.End" Title="Location">
    <div class="row align-items-center">
        <div class="col my-4">
            <Badge BackgroundColor="@Theme.Info" Message="Setup..." />
        </div>
    </div>
    <div class="row justify-content-between pb-3">
        <div class="col-10">
            <div class="form-floating">
                <input type="text"
                       id="Address"
                       class="form-control"
                       placeholder="Address"
                       @bind-value="_locationModel.Address" />
                <label for="Address">Address</label>
            </div>
        </div>
        <div class="col-2 d-flex justify-content-end">
            <button class="btn btn-primary"
                    disabled="@(_isProcessing ? true : false)"
                    title="Verify address"
                    @onclick="VerifyAddress">
                <i class="bi bi-check2"></i>
            </button>
        </div>
    </div>

    <div class="pb-2">
        <hr />
    </div>
    <div class="row justify-content-end">
        <div class="col-6">
            <button class="btn btn-light w-100"
                    @onclick="() => CloseOffCanvasAsync()">
                Close
            </button>
        </div>
        <div class="col-6">
            <button class="btn btn-success w-100"
                    disabled="@(_isVerified ? false : true)"
                    @onclick="SaveAddress">
                @(_isVerified ? "Saving..." : "Save")
            </button>
        </div>
    </div>
</OffCanvas>
<Toast />