@using MainApp.Components.Card

<div class="btn p-0 border-0"
        @onclick="SetSettingsLocation">
    <CardView Styles="border-0">
        <CardMiddle>
            <div class="d-flex w-100 align-items-center">
                <i class="bi bi-pin-map-fill text-info pe-3"></i>
                <div class="w-100 text-start">
                    <h2 class="mb-1 h5">Location</h2>
                    <div class="text-secondary pb-2">
                        <small>Set your location for personalized content for weather, news and more.</small>
                    </div>
                </div>
                <div class="text-secondary">
                    <i class="bi bi-chevron-right"></i>
                </div>
            </div>
        </CardMiddle>
    </CardView>
</div>
